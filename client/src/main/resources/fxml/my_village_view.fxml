<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="cml.controller.VillageController">
  <children>
    <BorderPane prefHeight="600.0" prefWidth="900.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <bottom>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="900.0" spacing="10.0" BorderPane.alignment="CENTER">
          <children>
            <GridPane gridLinesVisible="true" HBox.hgrow="SOMETIMES">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <padding>
                <Insets left="10.0" fx:id="x1" />
              </padding>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
            </GridPane>
            <TextArea fx:id="aboutSelection" editable="false" prefHeight="74.0" prefWidth="200.0" text="Information about current selection" wrapText="true" HBox.hgrow="ALWAYS">
              <HBox.margin>
                <Insets />
              </HBox.margin>
            </TextArea>
            <Button fx:id="battleButton" mnemonicParsing="false" prefHeight="78.0" prefWidth="192.0" text="Battle" HBox.hgrow="SOMETIMES">
              <HBox.margin>
                <Insets right="10.0" fx:id="x2" />
              </HBox.margin>
            </Button>
          </children>
        </HBox>
      </bottom>
      <top>
        <HBox alignment="CENTER" maxHeight="-1.0" prefHeight="100.0" prefWidth="900.0" spacing="10.0" BorderPane.alignment="CENTER">
          <children>
            <Label fx:id="playerLevelLabel" alignment="CENTER" prefHeight="98.0" prefWidth="205.0" text="PlayerLVL" HBox.hgrow="ALWAYS" HBox.margin="$x1" />
            <Label fx:id="goldLabel" alignment="CENTER" prefHeight="98.0" prefWidth="205.0" text="Gold" HBox.hgrow="ALWAYS" />
            <Label fx:id="foodLabel" alignment="CENTER" prefHeight="98.0" prefWidth="205.0" text="Food" HBox.hgrow="ALWAYS" />
            <MenuButton id="menuButton" alignment="CENTER" mnemonicParsing="false" prefHeight="78.0" prefWidth="169.0" text="Menu" HBox.hgrow="ALWAYS" HBox.margin="$x2">
              <items>
                <MenuItem mnemonicParsing="false" text="Settings" fx:id="settingsMenuItem" />
                <MenuItem mnemonicParsing="false" text="Logout" fx:id="logoutMenuItem" />
              </items>
            </MenuButton>
          </children>
          <padding>
            <Insets />
          </padding>
        </HBox>
      </top>
    </BorderPane>
  </children>
</AnchorPane>
