                    <Insets left="10.0" fx:id="x3" />
                  </HBox.margin>
                </Label>
                <Label fx:id="goldLabel" alignment="CENTER" prefHeight="98.0" prefWidth="205.0" text="Gold" HBox.hgrow="ALWAYS" />
