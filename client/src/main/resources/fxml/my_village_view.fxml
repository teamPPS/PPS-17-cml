                    <MenuItem fx:id="settingsMenuItem" mnemonicParsing="false" text="Settings" />
                    <MenuItem fx:id="logoutMenuItem" mnemonicParsing="false" text="Logout" />
                  </items>
                </MenuButton>
              </children>
              <padding>
                <Insets />
              </padding>
            </HBox>
            <Separator prefWidth="200.0" />
          </children>
        </VBox>
