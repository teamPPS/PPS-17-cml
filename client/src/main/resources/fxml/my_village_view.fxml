          <children>
            <Separator prefWidth="200.0" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="900.0" spacing="10.0">
              <children>
                <ScrollPane fx:id="buildingsGrid" content="$null" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="SOMETIMES">
                  <HBox.margin>
                    <Insets left="10.0" fx:id="x1" />
                  </HBox.margin>
                </ScrollPane>
                <TextArea fx:id="selectionInfo" editable="false" prefHeight="97.0" prefWidth="325.0" text="Information about current selection" wrapText="true" HBox.hgrow="ALWAYS">
